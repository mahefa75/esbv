{% extends 'admin/dashboard.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/admin/category.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('assets/js/admin/category.js') }}" defer></script>
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="container-fluid px-4">
        <div class="categories-header">
            <h1>Gestion des catégories</h1>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newCategoryModal">
                <i class="fas fa-plus me-2"></i>Nouvelle catégorie
            </button>
        </div>

        <div class="categories-card card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="categories-table table">
                        <thead>
                            <tr>
                                <th class="text-left">Catégorie</th>
                                <th class="text-center" style="width: 100px;">Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td>
                                        <strong>{{ category.name }}</strong><br>
                                        <small><i>{{ category.description }}</i></small>
                                    </td>
                                    <td class="status-cell">
                                        {% if category.status %}
                                            <i class="fa-solid fa-circle-check status-icon active"></i>
                                        {% else %}
                                            <i class="fa-solid fa-circle-xmark text-danger status-icon"></i>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center">Aucune catégorie trouvée</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal %}
    <!-- Modal Nouvelle Catégorie -->
    <div class="modal fade" id="newCategoryModal" tabindex="-1" aria-labelledby="newCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newCategoryModalLabel">Nouvelle catégorie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <form id="newCategoryForm" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="row mb-4">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label for="categoryName" class="form-label">Nom de la catégorie <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="categoryName" name="name" required>
                                    <div class="invalid-feedback">Le nom de la catégorie est requis</div>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="categoryDescription" class="form-label">Description <span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="categoryDescription" name="description" rows="3" required></textarea>
                                    <div class="invalid-feedback">La description est requise</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label d-block">Statut</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="categoryStatus" name="status" checked>
                                        <label class="form-check-label" for="categoryStatus">Actif</label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="categoryImage" class="form-label">Image</label>
                                    <input type="file" class="form-control" id="categoryImage" name="image" accept="image/*">
                                    <div class="form-text">Format recommandé : JPG, PNG (max 2MB)</div>
                                </div>
                            </div>
                        </div>

                        <div class="attributes-section">
                            <h6 class="mb-3">Attributs</h6>
                            <div class="attributes-list">
                                <!-- Les attributs seront ajoutés ici dynamiquement -->
                            </div>
                            <button type="button" class="btn btn-outline-primary btn-sm mt-2" id="addAttributeBtn">
                                <i class="fas fa-plus me-1"></i> Ajouter un attribut
                            </button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 